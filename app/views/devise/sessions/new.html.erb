
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <div class="col-sm-4 col-sm-offset-4">
    <h2 style="text-align: center;">Log in</h2>
    <%= f.input :email, required: false, autofocus: true, label: 'Email', placeholder: 'e.g., manu.macron@gmail.com' %>
    <%= f.input :password, required: false, label: false, label: 'Password', placeholder: 'e.g., ••••••' %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

  <div class="form-actions">
    <%= f.button :submit, "LOG IN", class: "btn-cta" %>
  </div>
  <div class="log-in-link">
      <%= render "devise/shared/links" %>
    </div>
  </div>
  <% end %>
